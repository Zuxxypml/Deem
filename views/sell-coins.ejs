            </div>
          </div>
          <!-- Tether  -->
          <div class="box tether-box">
            <div class="sell-coin">
              <img src="Assets/img/tether.svg" alt="" />
              <div class="text">
                <a href="/sell-tether" class="btn btn-tether">Sell tether</a>
              </div>
            </div>
            <div class="rate">
              <span class="text">Rate:</span>
              <div class="price text">570₦/$</div>
            </div>
            <div class="rate">
              <div class="live-value text">Live Value:</div>
              <div class="value text">$<%=tethervalue%></div>
            </div>
          </div>
          <!-- Tron  -->
          <div class="box tron-box">
            <div class="sell-coin">
              <img src="Assets/img/trx.svg" alt="" />
              <div class="text">
                <a href="/sell-tether" class="btn btn-tron">Sell Tron</a>
              </div>
            </div>
            <div class="rate">
              <span class="text">Rate:</span>
              <div class="price text">570₦/$</div>
            </div>
            <div class="rate">
              <div class="live-value text">Live Value:</div>
              <div class="value text">$<%=tronvalue%></div>
            </div>
          </div>
          <!-- End  -->
        </div>
        <!-- Div End  -->
      </div>
    </div>
  </section>
</body>

<!-- Core Javascript  -->
<script src="Assets/js/sellCoins.js"></script>

</html>