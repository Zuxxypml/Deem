                </div>
                <div class="form-control-group">
                  <input
                    class="input-bordered"
                    type="hidden"
                    value="<%=btcvalue%>"
                    name="btcrate"
                    id="mainbtcRate"
                    required
                  />
                  <input
                    type="number"
                    class="form-control form-control-lg form-control-number"
                    value=""
                    name="dividerate"
                    id="divide_amount"
                    readonly
                    disabled
                  />
                </div>
              </div>
              <!-- .buysell-field -->

              <div class="buysell-field form-group">
                <div class="form-label-group">
                  <label class="form-label" for="buysell-amount"
                    >Rate (We Buy At):</label
                  >
                </div>
                <div class="form-control-group">
                  <input
                    disabled
                    class="form-control form-control-lg form-control-number"
                    type="text"
                    value="570"
